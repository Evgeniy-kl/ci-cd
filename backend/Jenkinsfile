pipeline {
    agent { docker { image 'python:3.10.1-alpine' } }
    stages {
        stage('build') {
            steps {
                sh """
                    apt-get install sudo -y &&
                    sudo -H pip3 install --upgrade pip &&
                    sudo -H pip3 install pipenv &&
                    pipenv install --system --deploy &&
                    pytest
                """
            }
        }
    }
}