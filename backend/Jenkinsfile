pipeline {
    agent { docker { image 'python:3.10.1-alpine' } }
    stages {
        stage('build') {
            steps {
                sh """
                    sudo chown -R $USERNAME /Users/$USERNAME/Library/Caches/pip &&
                    pip install --upgrade pip &&
                    python -m pip install --user pipenv &&
                    cd backend &&
                    pipenv install --system --deploy &&
                    pytest
                """
            }
        }
    }
}