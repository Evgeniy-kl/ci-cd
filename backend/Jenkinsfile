pipeline {
    agent { docker { image 'python:3.10.1-alpine' } }
    stages {
        stage('build') {
            steps {
                sh """
                    pip install --no-cache-dir --upgrade pip &&
                    pip install --no-cache-dir pipenv &&
                    pipenv install --system --deploy &&
                    pytest
                """
            }
        }
    }
}